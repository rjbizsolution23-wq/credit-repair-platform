  "content_filters": {
    "min_content_length": 100,
    "max_content_length": 1000000,
    "exclude_patterns": [
      "404 Not Found",
      "Access Denied",
      "Page Not Found",
      "Error 403",
      "Forbidden"
    ],
    "include_keywords": [
      "credit repair",
      "credit reporting",
      "debt collection",
      "consumer protection",
      "FCRA",
      "FDCPA",
      "TILA",
      "ECOA",
      "GLBA",
      "metro2",
      "dispute letter",
      "validation letter",
      "credit bureau",
      "credit score",
      "consumer complaint"
    ]
  },
  "output_formats": {
    "json": true,
    "markdown": true,
    "jsonl_chunks": true,
    "csv_export": true,
    "sqlite_db": true,
    "embeddings": false,
    "vector_db": false
  },
  "processing_options": {
    "extract_metadata": true,
    "generate_summaries": false,
    "detect_language": true,
    "remove_duplicates": true,
    "similarity_threshold": 0.85,
    "clean_html": true,
    "extract_links": true,
    "preserve_structure": true
  },
  "compliance_settings": {
    "respect_robots_txt": true,
    "rate_limiting": true,
    "user_agent": "CreditCorpusCrawler/1.0 (Educational Research)",
    "max_requests_per_minute": 60,
    "politeness_delay": 1.0,
    "respect_crawl_delay": true
  },
  "logging": {
    "level": "INFO",
    "file": "credit_corpus_crawler.log",
    "max_size_mb": 100,
    "backup_count": 5,
    "console_output": true
  }
}