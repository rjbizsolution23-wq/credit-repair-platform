{
  "crawler_settings": {
    "output_directory": "credit_repair_corpus",
    "max_concurrent_requests": 10,
    "request_delay": 1.0,
    "timeout": 30,
    "retry_attempts": 3,
    "chunk_size": 1000,
    "max_documents_per_source": 1000,
    "enable_chunking": true,
    "enable_embeddings": false,
    "respect_robots_txt": true
