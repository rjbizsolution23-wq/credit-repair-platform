# Elite Credit Repair Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME="Elite Credit Repair Platform"
APP_URL=http://localhost:3000
API_VERSION=v1

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key-change-this

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=credit_repair_platform
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Email Configuration
EMAIL_ENABLED=true
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME="Elite Credit Repair"
EMAIL_FROM_ADDRESS=noreply@creditrepair.com

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_ENABLED=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,jpg,jpeg,png,gif,doc,docx,txt
UPLOAD_PATH=./uploads
MAX_FILES_PER_UPLOAD=5

# AI/ML Configuration
AI_ENABLED=true
AI_MODEL_PATH=./models
AI_CONFIDENCE_THRESHOLD=0.7
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Credit Bureau API Configuration (if available)
EXPERIAN_API_KEY=your-experian-api-key
EXPERIAN_API_SECRET=your-experian-api-secret
EQUIFAX_API_KEY=your-equifax-api-key
EQUIFAX_API_SECRET=your-equifax-api-secret
TRANSUNION_API_KEY=your-transunion-api-key
TRANSUNION_API_SECRET=your-transunion-api-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_SKIP_SUCCESSFUL=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# Two-Factor Authentication
TWO_FACTOR_ENABLED=false
TWO_FACTOR_ISSUER="Elite Credit Repair"

# Notification Settings
NOTIFICATION_ENABLED=true
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Cloud Storage (Optional)
CLOUD_STORAGE_ENABLED=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudflare Configuration (if using)
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Monitoring and Analytics
MONITORING_ENABLED=false
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# API Keys for External Services
CREDIT_MONITORING_API_KEY=your-credit-monitoring-api-key
IDENTITY_VERIFICATION_API_KEY=your-identity-verification-api-key
ADDRESS_VALIDATION_API_KEY=your-address-validation-api-key

# Development/Testing Settings
DEBUG_MODE=false
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/credit_repair_test
SEED_DATABASE=false
MOCK_EXTERNAL_APIS=true

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=3600
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Security Headers
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=30000

# Queue Configuration (for background jobs)
QUEUE_ENABLED=true
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# PDF Generation
PDF_ENABLED=true
PDF_TIMEOUT=30000
PDF_FORMAT=A4
PDF_MARGIN=1in

# Letter Generation
LETTER_AUTO_SEND=false
LETTER_AI_ENHANCEMENT=true
LETTER_TEMPLATE_PATH=./templates

# Company Information
COMPANY_NAME="Elite Credit Repair"
COMPANY_ADDRESS="123 Business Ave, Business City, BC 12345"
COMPANY_PHONE="(555) 123-4567"
COMPANY_EMAIL="info@creditrepair.com"
COMPANY_WEBSITE="https://www.creditrepair.com"

# Legal and Compliance
TERMS_OF_SERVICE_URL="https://www.creditrepair.com/terms"
PRIVACY_POLICY_URL="https://www.creditrepair.com/privacy"
COMPLIANCE_MODE=strict
DATA_RETENTION_DAYS=2555

# Feature Flags
FEATURE_CREDIT_MONITORING=true
FEATURE_AI_INSIGHTS=true
FEATURE_BULK_DISPUTES=true
FEATURE_CLIENT_PORTAL=true
FEATURE_MOBILE_APP=false
FEATURE_ADVANCED_ANALYTICS=true

# Subscription Plans
BASIC_PLAN_PRICE=29.99
PROFESSIONAL_PLAN_PRICE=59.99
ENTERPRISE_PLAN_PRICE=99.99

# System Limits
MAX_DISPUTES_PER_CLIENT=50
MAX_DOCUMENTS_PER_DISPUTE=10
MAX_CLIENTS_PER_USER=1000
MAX_LETTERS_PER_DISPUTE=10

# Timezone
TIMEZONE=America/New_York
DATE_FORMAT=MM/DD/YYYY
TIME_FORMAT=12

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs
SWAGGER_UI_ENABLED=true