# Rick Jefferson Solutions - Production Monitoring Configuration
# Copy this file to .env and configure your monitoring settings

# API Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:4200

# Email Alert Configuration
ALERT_EMAIL_ENABLED=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@rickjeffersonsolutions.com
SMTP_PASSWORD=your_app_password_here
ALERT_RECIPIENTS=info@rickjeffersonsolutions.com,admin@rickjeffersonsolutions.com
ALERT_COOLDOWN_MINUTES=30

# Monitoring Thresholds
CPU_THRESHOLD=80.0
MEMORY_THRESHOLD=85.0
DISK_THRESHOLD=90.0
RESPONSE_TIME_THRESHOLD=5000
ERROR_RATE_THRESHOLD=5.0

# Monitoring Intervals (minutes)
HEALTH_CHECK_INTERVAL=5
DASHBOARD_REFRESH_INTERVAL=1
REPORT_GENERATION_INTERVAL=60

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts
SLACK_ENABLED=false

# SMS Alerts (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
SMS_ALERT_NUMBERS=+19453088003
SMS_ENABLED=false

# Database Configuration
MONITORING_DB_URL=sqlite:///monitoring.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=monitoring.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security
MONITORING_API_KEY=your_secure_api_key_here
DASHBOARD_PASSWORD=your_dashboard_password_here

# Rick Jefferson Solutions Branding
COMPANY_NAME=Rick Jefferson Solutions
COMPANY_EMAIL=info@rickjeffersonsolutions.com
COMPANY_PHONE=877-763-8587
COMPANY_WEBSITE=rickjeffersonsolutions.com
COMPANY_TAGLINE=Your Credit Freedom Starts Here